<div class="container-fluid">
  <div class="row border-bottom">
    <div class="col-md-10 col-6"><h4>Categories List <small>[<%= Category.count %>]</small></h4></div>
    <div class="col-md-2 col-6 text-right">
      <%= link_to "new Category", new_category_path %>
    </div>
  </div>
  <div class="row">
    <div class='col-md-12'>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category, sno| %>
              <tr>
                <td><%= link_to category.name, category_path(category) %></td>
                <td><% category.products.each do |pro| %>
                      <%= pro.name %>
                      <% pro.tags.each do |tag| %>
                        [<%= tag.name %>]
                      <% end %>
                      <br>
                    <% end %>
                </td>
                <td>
                  <%= link_to "edit category", edit_category_path(category) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
